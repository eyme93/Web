{% extends 'SamGunBundle:Default:index.html.twig' %}

{% block body %}
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Cat√©gories</th>
        <th>Messages</th>
      </tr>
    </thead>
    <tbody>
      {% for cat in Categories %}
      <tr>
        <td>
          <h4><a href="/forum/topics?categorie={{cat.nom}}">{{cat.nom}}</a></h4>
          <p>
            {% for sc in SousCategories %}
              {% if sc.idCategorie == cat.id %}
                <a href="/forum/topics?categorie={{cat.nom}}&&sous_categorie={{sc.nom}}">{{sc.nom}}</a> |
              {% endif %}
            {% endfor %}
          </p>
        </td>
        <td>
        {% for m in Mess %}
          {% if m.id_categorie == cat.id %}
            {{m.nb_messages}}
          {% endif %}
        {% endfor %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
