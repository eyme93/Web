{% extends 'SamGunBundle:Default:index.html.twig' %}
{% block body %}
  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <div class="container">
    <form action="{{ path('login') }}" method="post">
        <table class="col-md-6 col-md-offset-1 table table-striped">
          <thead>
            <th> <label for="username">Username:</label> </th>
            <th><label for="password">Password:</label></th>
          </thead>
          <tbody>
            <tr>
              <td><input type="text" id="username" name="_username" value="{{ last_username }}" /></td>
              <td><input type="password" id="password" name="_password" /></td>
            </tr>
            <tr>
              <td><button type="submit">Login</button></td>
              <td></td>
            </tr>
          </tbody>
        </table>
    </form>
  </div>
{% endblock %}
